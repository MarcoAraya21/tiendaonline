<%= form_for(category) do |f| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> en esta categoria para ser modificado:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :Nombre %>
    <%= f.text_field :Nombre %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>